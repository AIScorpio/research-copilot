datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  favorites UserFavorite[]
  tags      UserTag[]
}

model Paper {
  id              String   @id @default(uuid())
  title           String
  abstract        String?
  aiSummary       String?
  url             String
  source          String
  publicationDate DateTime
  collectedAt     DateTime @default(now())
  tags            PaperTag[]
  favoritedBy     UserFavorite[]
  userTags        UserTag[]
}

model Tag {
  id     String   @id @default(uuid())
  name   String   @unique
  type   String   // "Academic" or "Industrial"
  papers PaperTag[]
}

model PaperTag {
  paperId String
  tagId   String
  paper   Paper @relation(fields: [paperId], references: [id])
  tag     Tag   @relation(fields: [tagId], references: [id])

  @@id([paperId, tagId])
}

model UserFavorite {
  userId  String
  paperId String
  user    User  @relation(fields: [userId], references: [id])
  paper   Paper @relation(fields: [paperId], references: [id])

  @@id([userId, paperId])
}

model UserTag {
  id      String @id @default(uuid())
  userId  String
  paperId String
  tagName String
  user    User   @relation(fields: [userId], references: [id])
  paper   Paper  @relation(fields: [paperId], references: [id])
}

model Source {
  id        String   @id @default(uuid())
  name      String
  url       String   // Base URL of the source
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
}
